<div class="post">
  <div class="post-title">
    <h3><%= post.title %></h3>
    <p>Posted by <%= post.user.email %></p>
  </div>
  <div class="post-spam-flag">
    <% if post.flagged_by?(current_user) %>
      <p>Thanks for flagging this post as spam.</p>
    <% else %>
      <%= link_to "Flag as spam", post_spam_flags_path(post), method: :post %>
    <% end %>
  </div>
  <div class="post-body">
    <p><%= post.body %></p>
  </div>
</div>
